<%= form_with model:@event ,url:events_path, local:true do |f| %>
  <div class="field">
    <%= f.label :event_name %>
    <%= f.text_field :event_name %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>

  <div class="field">
    <%= f.label :limit %>
    <%= f.number_field :limit %>
  </div>

  <div class="field">
    <%= f.label :detail %>
    <%= f.text_field :detail %>
  </div>

  <div class="action">
    <%= f.submit%>
  </div>

<% end %>