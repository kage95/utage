<div class="container">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="shadow p-3 mb-5 bg-white rounded mt-5">
        <%= form_with model:@event ,url:select_restaurant_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label :宴会名 %>
            <%= f.text_field :event_name, class: 'form-control',required: true, maxlength: "50"%>
          </div>

          <div class="form-group">
            <%= f.label :開催日 %>
            <%= f.datetime_field :date, class: 'form-control',required: true %>
          </div>

          <div class="form-group">
            <%= f.label :制限人数 %>
            <%= f.number_field :limit, in: 1..20, class:"form-control",required: true %>
          </div>

          <div class="form-group">
            <%= f.label :詳細 %>
            <%= f.text_area :detail, class: 'form-control',required: true, maxlength: "255" %>
            <small class="form-text text-muted"><p>最大255文字まで</p></small>
          </div>

          <div class="action">
            <%= f.submit "飲食店を決める →", class:"btn btn-primary btn-block" %>
          </div>

        <% end %>
