<ol>
  <div class="card mr-1" style="width: 18rem;">
    <%= image_tag event.event_image, class:"card-img-top", width:"100%", height:"100" %>
    <div class="card-body">
      <h5 class="card-title"><%= event.event_name %></h5>
      <small class="card-text event-detail mb-3"><%= event.detail %></small>
      <%= link_to "見にいく！", event_path(event.id), class:"btn btn-info" %>
    </div>
  </div>
</ol>